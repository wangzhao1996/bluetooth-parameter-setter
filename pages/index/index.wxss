@import "../../fonts/stylesheet.wxss";

.pageFlexColumn {
    display: flex;
    flex-direction: column;
    height: 100vh;
    max-height: 100vh;
    overflow: hidden;
}

.weui-navigation-bar {
    flex-shrink: 0 !important;
}

.page-content {
    position: relative;
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.page-loading-icon {
    display: block;
    width: 140rpx;
    height: 140rpx;
}

.page-nodata-icon {
    display: block;
    width: 280rpx;
    height: 280rpx;
}

.page-scroll {
    height: 100%;
}

.button--mini--nobg {
    background: transparent !important;
}
.button--mini--nobg::before {
    content: '';
    background: transparent !important;
}
.button--mini--nobg::after {
    box-shadow: none;
}

.button--mini--mt {
    margin-top: 48rpx;
}


/* 卡片样式 */

.dev {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 32rpx;
    margin: 32rpx auto;
    width: 664rpx;
    box-sizing: border-box;
    border-radius: 12px;
    position: relative;
    background: linear-gradient(135deg, #39A3D4, #337BBB30, #337BBB30, #39A3D4);
    overflow: hidden;
    font-family: 'DingTalk';
}

.dev::before {
    content: "";
    position: absolute;
    top: 4rpx;
    left: 4rpx;
    right: 4rpx;
    bottom: 4rpx;
    background-color: #0F1D31;
    border-radius: 20rpx;
}

.dev::after {
    content: "";
    position: absolute;
    top: -400px;
    left: 50%;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    transform: translateX(-50%);
    box-shadow: 0 0 500px 10px #228FED;
}

.dev--hover {
    opacity: 0.9;
}

.dev__info {
    position: relative;
    z-index: 100;
    flex: 1;
    padding-left: 12rpx;
    margin-right: 16rpx;
    overflow: hidden;
}

.dev__info__name {
    font-size: 32rpx;
    font-weight: bold;
    line-height: 64rpx;
}

.dev__info__subname {
    padding-top: 8rpx;
    font-size: 24rpx;
}

.dev__rssi {
    flex-shrink: 0;
}

.dev__rssi__image {
    display: block;
    width: 64rpx;
    height: 64rpx;
}

.liner-items {
    position: relative;
    z-index: 100;
    margin-top: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 4rpx;
}

.liner-item {
    width: 18%;
    height: 4rpx;
    border-radius: 2rpx;
    background-color: #cccccc;
}

.liner-item-show {
    background-color: #92FCE6;
}
