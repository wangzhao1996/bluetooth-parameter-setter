/* 弹窗样式 */

.setting-popup {
    width: 100%;
    height: 320rpx;
}

.setting-popup__title {
    padding: 48rpx 0 12rpx;
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    line-height: 40rpx;
}

.setting-popup__preview {
    margin: 12rpx 0;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 32rpx;
}

.setting-popup__inputbox {
    margin: 10rpx 24rpx;
    height: 80rpx;
    border-bottom: 1rpx solid #cccccc;
}

.setting-popup__input {
    display: block;
    width: 100%;
    height: 100%;
}